<h2 class="heading">Hotels</h2>
<% if @hotels.any? %>
  <div class="hotel-list">
    <% @hotels.each do |hotel| %>
      <div class="hotel-card">
        <% if hotel.image.attached? %> 
          <img src="<%= url_for(hotel.image) %>" alt="<%= hotel.name %>" class="hotel-image">
        <% end %>
        <div class="hotel-info">
          <h3 class="hotel-name"><%= hotel.name %></h3>
          <p class="hotel-address"><%= hotel.address %></p>
          <p class="hotel-description"><%= truncate(hotel.description, length: 100) %></p>
          <p class="hotel-rating">Rating: <%= hotel.rating %>/5</p>
          <p class="hotel-contact">Contact: <%= hotel.number %></p>
          <%= link_to "View Details", room_path(hotel), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="no-hotels">No Hotels available.</p>
<% end %>
