<h1 class="text-center mb-5">New Booking</h1>

<%= form_with(model: @booking, local: true, html: { class: "form-container" }) do |form| %>
<% if @booking.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>
    <ul>
      <% @booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="form-section">
    <div class="form-row">
      <div class="form-group">
        <%= form.label :name, class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :age, class: 'form-label' %>
        <%= form.text_field :age, class: 'form-control' %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= form.label :gender, class: 'form-label' %>
        <%= form.select :gender, Booking.genders.keys.map { |g| [g.humanize, g] }, { prompt: 'Select Gender' }, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :contact, class: 'form-label' %>
        <%= form.text_field :contact, class: 'form-control' %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= form.label :date, class: 'form-label' %>
        <%= form.date_select :date, {}, { class: 'form-control' } %>
      </div>
    </div>

    <%= form.hidden_field :room_id, value: params[:room_id] %>

    <div class="form-actions text-center">
      <%= form.submit "Room Booking", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
