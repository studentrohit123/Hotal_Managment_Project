<h2 class="rooms-heading">Rooms</h2>

<% if @rooms.any? %>
  <div class="rooms-container">
    <% @rooms.each do |room| %>
      <div class="room-card">
        <%# Room Image %>
        <div class="room-image">
          <% if room.image.attached? %>
            <%= image_tag room.image, size: "300x200", class: "img-fluid" %>
          <% end %>
        </div>

        <div class="room-info">
          <h3 class="room-title">Room Number: <%= room.room_number %></h3>
          <p><strong>Room Type:</strong> <%= room.room_type %></p>
          <p><strong>Price:</strong> â‚¹<%= room.price %></p>
          <p><strong>Capacity:</strong> <%= room.capacity %> persons</p>

          <div class="room-actions">
            <%= link_to 'Booking', new_booking_path(room_id: room.id), class: "btn btn-booking" %>
            <%= button_to 'Pay with Stripe', checkout_booking_path(room), method: :post, class: 'btn btn-pay' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No rooms available.</p>
<% end %>
